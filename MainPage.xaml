<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoordinateSender.MainPage">

    <StackLayout Padding="20">
        <Label Text="Welcome to the Main Page!"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand" />
        <!-- Кнопка для перехода на RoutesPage -->
        <Button Text="Go to Routes Page"
                Clicked="OnGoToRoutesPageClicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />
        <!-- Кнопка для перехода на MapPage -->
        <Button Text="Go to Map Page"
                Clicked="OnGoToMapPageClicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
